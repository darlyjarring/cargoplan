<script>
    const _supabase = supabase.createClient('https://vqxdmmtashwloobkhbva.supabase.co', 'sb_publishable_seniB_T4zCgrkooZ-Ow9aQ_znLUwvLC');

    let currentId = null; // Para saber qué registro actualizar

    async function buscarContenedor() {
        const busqueda = document.getElementById('txtBusqueda').value.trim();
        if (!busqueda) return;

        document.getElementById('loading').style.display = 'flex';
        
        try {
            const { data, error } = await _supabase
                .from('distribucion_diaria')
                .select('*')
                .eq('contenedor', busqueda)
                .single();

            if (error || !data) {
                alert("Contenedor no encontrado en la planificación.");
                document.getElementById('detalleContenedor').style.display = 'none';
                document.getElementById('mensajeVacio').style.display = 'block';
            } else {
                currentId = data.id;
                // Llenar etiquetas de información
                document.getElementById('lblBooking').innerText = data.booking || 'N/A';
                document.getElementById('lblDae').innerText = data.dae || 'N/A';
                document.getElementById('lblSemana').innerText = data.semana || 'N/A';
                document.getElementById('lblDestino').innerText = data.destino || 'N/A';
                document.getElementById('lblEmpresa').innerText = data.empresa || 'N/A';
                document.getElementById('lblMarca').innerText = data.marca || 'N/A';
                document.getElementById('lblFinca').innerText = data.productor || 'N/A';
                document.getElementById('lblTerminal').innerText = data.terminal || 'N/A';
                document.getElementById('lblChofer').innerText = data.chofer || 'N/A';
                document.getElementById('lblCedula').innerText = data.cedula || 'N/A';
                document.getElementById('lblPlaca').innerText = data.placa || 'N/A';
                document.getElementById('lblConsolidacion').innerText = data.consolidacion || 'N/A';

                // Llenar campos editables de sellos
                document.getElementById('txtSelloNaviera').value = data.sello_naviera || '';
                document.getElementById('txtSelloTermo').value = data.sello_termo || '';
                document.getElementById('txtSelloExportadora').value = data.sello_exportadora || '';
                document.getElementById('txtSelloSeguridad').value = data.sello_seguridad || '';

                document.getElementById('detalleContenedor').style.display = 'block';
                document.getElementById('mensajeVacio').style.display = 'none';
            }
        } catch (e) {
            console.error(e);
        } finally {
            document.getElementById('loading').style.display = 'none';
        }
    }

    async function guardarSellos() {
        if (!currentId) return;

        const btn = document.querySelector('.btn-save');
        btn.disabled = true;
        btn.innerHTML = "Guardando...";

        const updates = {
            sello_naviera: document.getElementById('txtSelloNaviera').value.trim(),
            sello_termo: document.getElementById('txtSelloTermo').value.trim(),
            sello_exportadora: document.getElementById('txtSelloExportadora').value.trim(),
            sello_seguridad: document.getElementById('txtSelloSeguridad').value.trim()
        };

        const { error } = await _supabase
            .from('distribucion_diaria')
            .update(updates)
            .eq('id', currentId);

        if (!error) {
            alert("¡Sellos actualizados correctamente!");
        } else {
            alert("Error al actualizar: " + error.message);
        }

        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-cloud-check"></i> GUARDAR INFORMACIÓN';
    }

    // Permitir buscar al presionar Enter
    document.getElementById('txtBusqueda').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') buscarContenedor();
    });
</script>

